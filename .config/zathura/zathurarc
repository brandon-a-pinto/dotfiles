set window-title-basename "true"
set selection-clipboard "clipboard"
set font 'monospace bold 12'

set notification-error-bg       "#f07178" # Red
set notification-error-fg       "#d0d0d0" # Foreground
set notification-warning-bg     "#ed8f70" # Orange
set notification-warning-fg     "#44475a" # Selection
set notification-bg             "#292d3e" # Background
set notification-fg             "#d0d0d0" # Foreground

set completion-bg               "#292d3e" # Background
set completion-fg               "#82aaff" # Comment
set completion-group-bg         "#292d3e" # Background
set completion-group-fg         "#82aaff" # Comment
set completion-highlight-bg     "#44475a" # Selection
set completion-highlight-fg     "#d0d0d0" # Foreground

set index-bg                    "#292d3e" # Background
set index-fg                    "#d0d0d0" # Foreground
set index-active-bg             "#44475a" # Current Line
set index-active-fg             "#d0d0d0" # Foreground

set inputbar-bg                 "#292d3e" # Background
set inputbar-fg                 "#d0d0d0" # Foreground
set statusbar-bg                "#292d3e" # Background
set statusbar-fg                "#c792ea" # Foreground

set highlight-color             "#ed8f70" # Orange
